---
import { Icon } from "astro-icon/components";
import menu from "../config/menu.json";

interface NavIcon {
  name: string;
  icon: string;
  url: string | null;
}

const { sidebar }: { sidebar: NavIcon[] } = menu;
---

<div class="drawer lg:drawer-open">
  <input id="sidebar" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col">
    <slot />
  </div>
  <div class="drawer-side">
    <label for="sidebar" aria-label="close sidebar" class="drawer-overlay"
    ></label>
    <div class="menu min-h-full w-24 bg-base-100 py-16 text-base-content">
      <ul class="menu rounded-box bg-transparent">
        {
          sidebar.map((item) => (
            <>
              <li class="flex items-center">
                <a
                  href={item.url}
                  class="tooltip tooltip-bottom"
                  data-tip={item.name}
                >
                  <Icon name={`tabler:${item.icon}`} size={30} />
                </a>
              </li>
              <div class="divider last:hidden" />
            </>
          ))
        }
      </ul>
    </div>
  </div>
</div>
